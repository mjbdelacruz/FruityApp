{% extends 'base.html.twig' %}

{% block title %}Favorite Fruits{% endblock %}

{% block body %}
    {% if fruits is empty %}
        <div class="d-flex justify-content-center">
            <h2>No Favorite has added yet.</h2>
        </div>
    {% else %}
        <div class="d-flex justify-content-center">
            <h2>Favorite Fruits</h2>
        </div>
        <div class="d-flex align-items-center flex-column">
            <div class="p-2">
                <h5>Sum of Nutritional Facts</h5>
                <ul class="list-group">
                    <li class="list-group-item"> <small><strong>Carbohydrates:</strong> {{ nutritionSummary.carbohydrates }}</small> </li>
                    <li class="list-group-item"> <small><strong>Protein:</strong> {{ nutritionSummary.protein }}</small> </li>
                    <li class="list-group-item"> <small><strong>Fat:</strong> {{ nutritionSummary.fat }}</small> </li>
                    <li class="list-group-item"> <small><strong>Calories:</strong> {{ nutritionSummary.calories }}</small> </li>
                    <li class="list-group-item"> <small><strong>Sugar:</strong> {{ nutritionSummary.sugar }} </small></li>
                </ul>
            </div>
            <div class="p-2">
                <table id="fruitTbl" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Family</th>
                        <th scope="col">Genus</th>
                        <th scope="col">Order</th>
                        <th scope="col">Nutrition</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for fruit in fruits %}
                        <tr>
                            <td class="align-middle"> {{ fruit.name }}</td>
                            <td class="align-middle"> {{ fruit.family }}</td>
                            <td class="align-middle"> {{ fruit.genus }}</td>
                            <td class="align-middle"> {{ fruit.order }}</td>
                            <td>
                                <ul class="list-group">
                                    <li class="list-group-item"> <small><strong>Carbohydrates:</strong> {{ fruit.nutritions.carbohydrates }}</small> </li>
                                    <li class="list-group-item"> <small><strong>Protein:</strong> {{ fruit.nutritions.protein }}</small> </li>
                                    <li class="list-group-item"> <small><strong>Fat:</strong> {{ fruit.nutritions.fat }}</small> </li>
                                    <li class="list-group-item"> <small><strong>Calories:</strong> {{ fruit.nutritions.calories }}</small> </li>
                                    <li class="list-group-item"> <small><strong>Sugar:</strong> {{ fruit.nutritions.sugar }} </small></li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
    <div class="d-flex justify-content-center">
        <p><a href="{{ path('fruits') }}">Back to index page</a></p>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var table = $('#fruitTbl').DataTable({
            "ordering": false,
            "paging": false,
            "searching": false,
            "info": false
        });
    </script>
{% endblock %}
